@model IEnumerable<FloEvent.Web.ViewModels.FoodItemViewModel>


@{
    ViewData["Title"] = "Food Items";
}

<h1>Food Items</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Ingredients)</th>
            <th>@Html.DisplayNameFor(model => model.First().Diet)</th>
            <th>@Html.DisplayNameFor(model => model.First().UnitPrice)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => item.Name)</td>
                <td>@Html.DisplayFor(_ => item.Ingredients)</td>
                <td>@Html.DisplayFor(_ => item.Diet)</td>
                <td>@Html.DisplayFor(_ => item.UnitPrice)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FoodItemId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FoodItemId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FoodItemId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
